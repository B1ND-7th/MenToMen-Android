<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="kr.hs.b1nd.intern.mentomen.viewmodel.HomeViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="view.fragment.HomeFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:id="@+id/tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/rv_home"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_design"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/corner_radious"
                            android:backgroundTint="@color/design"
                            android:fontFamily="@font/regular"
                            android:onClick="@{() -> vm.onClickDesignBtn()}"
                            android:text="Design"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/btn_web"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/corner_radious"
                            android:backgroundTint="@color/web"
                            android:fontFamily="@font/regular"
                            android:onClick="@{() -> vm.onClickWebBtn()}"
                            android:text="Web"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/btn_android"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/corner_radious"
                            android:backgroundTint="@color/android"
                            android:fontFamily="@font/regular"
                            android:onClick="@{() -> vm.onClickAndroidBtn()}"
                            android:text="Android"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/btn_server"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/corner_radious"
                            android:backgroundTint="@color/server"
                            android:fontFamily="@font/regular"
                            android:onClick="@{() -> vm.onClickServerBtn()}"
                            android:text="Server"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/btn_ios"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/corner_radious"
                            android:backgroundTint="@color/iOS"
                            android:fontFamily="@font/regular"
                            android:onClick="@{() -> vm.onClickIosBtn()}"
                            android:text="iOS"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>
                </ScrollView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tags" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>

    </FrameLayout>
</layout>
