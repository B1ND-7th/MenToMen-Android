<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.AddFragment">

    <data>
        <variable
            name="vm"
            type="kr.hs.b1nd.intern.mentomen.viewmodel.AddViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/post_upload_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_back"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/semibold"
                android:text="글쓰기"
                android:textColor="@color/black"
                android:textSize="18dp" />


        </androidx.appcompat.widget.Toolbar>

        <EditText
            android:id="@+id/et_contents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="멘토에게 부탁할 내용을 입력하세요."
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@={vm.content}"
            app:layout_constraintBottom_toTopOf="@id/tags"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_upload_toolbar" />

        <HorizontalScrollView
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_contents">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_design"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/unselected_design"
                    android:backgroundTint="@color/design"
                    android:fontFamily="@font/regular"
                    android:text="Design"
                    android:onClick="@{() -> vm.onClickDesignBtn()}"
                    designButtonState="@{vm.tagState}"
                    android:textAllCaps="false"
                    android:textColor="@color/design"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/btn_web"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/unselected_web"
                    android:backgroundTint="@color/web"
                    android:fontFamily="@font/regular"
                    android:text="Web"
                    android:onClick="@{() -> vm.onClickWebBtn()}"
                    webButtonState="@{vm.tagState}"
                    android:textAllCaps="false"
                    android:textColor="@color/web"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/btn_android"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/unselected_android"
                    android:backgroundTint="@color/android"
                    android:fontFamily="@font/regular"
                    android:text="Android"
                    android:onClick="@{() -> vm.onClickAndroidBtn()}"
                    androidButtonState="@{vm.tagState}"
                    android:textAllCaps="false"
                    android:textColor="@color/android"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/btn_server"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/unselected_server"
                    android:backgroundTint="@color/server"
                    android:fontFamily="@font/regular"
                    android:text="Server"
                    android:onClick="@{() -> vm.onClickServerBtn()}"
                    serverButtonState="@{vm.tagState}"
                    android:textAllCaps="false"
                    android:textColor="@color/server"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/btn_ios"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/unselected_ios"
                    android:backgroundTint="@color/iOS"
                    android:fontFamily="@font/regular"
                    android:text="iOS"
                    android:onClick="@{() -> vm.onClickIosBtn()}"
                    iosButtonState="@{vm.tagState}"
                    android:textAllCaps="false"
                    android:textColor="@color/iOS"
                    android:textSize="10sp" />
            </LinearLayout>
        </HorizontalScrollView>


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/gray"
            android:fontFamily="@font/regular"
            android:onClick="@{() -> vm.onCLickConfirm()}"
            android:text="멘토 요청하기"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tags"
            app:layout_constraintVertical_bias="0.666" />

        <ImageButton
            android:id="@+id/btn_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="#000"
            android:src="@drawable/ic_image"
            android:onClick="@{() -> vm.onClickImage()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_confirm"
            app:layout_constraintTop_toBottomOf="@+id/tags" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
